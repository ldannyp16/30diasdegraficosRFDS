#Stacked
ggplot(datos, aes(fill=PET, y=Porcentaje, x=A침o)) + 
  geom_bar(position="stack", stat="identity") 
   
 
#Stacked + percent
ggplot(datos, aes(fill=PET, y=Porcentaje, x=A침o)) + 
  geom_bar(position="fill", stat="identity") +
  labs(title="Poblaci칩n en Edad de Trabajar (PET)en COLOMBIA", subtitle="Fuerza laboral colombiana de 2010 a 2018",caption=element_text("Fuente: Gran Encuesta Integrada de Hogares, DANE"))


